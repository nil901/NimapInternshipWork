@model IEnumerable<Serversidepagination.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" >

    <div class="col-md-6" >
        <h2>ListProduct </h2>
        <table class="table">
            <tr>
                <th>EmployeeId</th>
                <th>EmployeeName</th>
                <th>Gender</th>
                <th>district</th>
                <th>Salary</th>

            </tr>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>

                    <td>@item.EmployeeId</td>
                    <td>@item.EmployeeName</td>
                     <td>@item.Gender</td>
                     <td>@item.district</td>
                     <td>@item.Salary</td>
                </tr>
            }
            </tbody>
        </table>
        <ul class="pagination">
            @{
                int numberPage = ViewBag.numberPage;
                int pageCurrent = ViewBag.pageCurrent;
                int i;
                for (i = 1; i <= numberPage; i++)
                {
                    if (i == pageCurrent)
                    {
                        <li class="active"><a href="?page=@i">@i</a></li>
                    }
                    else
                    {
                        <li><a href="?page=@i">@i</a></li>
                    }
                }
            }
        </ul>
    </div>
</div>